{
  "manifest_version": 3,
  "name": "Toolt bot",
  "version": "1.0",
  "description": "Bot messaging toolt",
  "permissions": [
    "webRequest",
    "system",
    "webRequestAuthProvider",
    "declarativeNetRequest",
    "debugger",
    "storage",
    "activeTab",
    "nativeMessaging",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
        "matches": [
          "<all_urls>"
        ]
    }
  ],
  "action": {
    "default_popup": "view/popup.html"
  }
}